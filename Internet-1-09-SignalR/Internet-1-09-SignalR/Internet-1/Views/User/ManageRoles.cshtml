@model List<UserRoleModel>

@{
    ViewData["Title"] = "Rolleri Yönet";
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Kullanıcı Rolleri</span>
}

<form asp-action="UpdateRoles" method="post">
    <div class="list-group">
        @for (int i = 0; i < Model.Count; i++)
        {
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />

            <div class="list-group-item">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsSelected">
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Rolleri Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>