@model Internet_1.ViewModels.LessonInstructorModel

@{
    ViewData["Title"] = "Eğitmen Sil";
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Eğitmen Sil</span>
}

<div class="container">
    <div class="alert alert-warning">
        <h4>Bu eğitmeni silmek istediğinizden emin misiniz?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Eğitmen Adı:</dt>
            <dd class="col-sm-10">@Model.Fullname</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a href="@Url.Action("Index", "Instructor")" class="btn btn-secondary">İptal</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}