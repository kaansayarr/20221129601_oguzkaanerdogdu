@model List<Internet_1.ViewModels.LessonInstructorModel>

@{
    ViewData["Title"] = "Eğitmenler";
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <span>Eğitmenler</span>
}

<div class="mb-3">
    <a href="@Url.Action("Add", "Instructor")" class="btn btn-primary btn-sm">Yeni Eğitmen Ekle</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Fullname</td>
                <td>
                    @if (instructor.IsActive)
                    {
                        <span class="badge bg-success text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Pasif</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Update", "Instructor", new { id = instructor.Id })"
                        class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", "Instructor", new { id = instructor.Id })"
                        class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
